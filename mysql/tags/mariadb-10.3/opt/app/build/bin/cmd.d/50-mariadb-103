#!/bin/bash -xe
cd ${UBUNTU}
mkdir -p /opt/app/mysql/{bin,lib,share,scripts} /opt/local/mysql/log

chroot . apt install -y -d --no-install-recommends -o 'Dir::Cache::Archives=/pkg' -o 'Dir::State::status=/pkg/status' bash mariadb-client mariadb-server mariadb-backup mariadb-plugin-tokudb mariadb-plugin-rocksdb mariadb-plugin-connect
chroot . bash -c 'for f in pkg/*.deb; do dpkg -x $f rootfs/; done'

cd ${UBUNTU}/rootfs
cp -a usr/lib/mysql/* /opt/app/mysql/lib/
cp -a usr/share/mysql/* /opt/app/mysql/share/
cp -a usr/*bin/{my_,mysql,maria,resolv}* /opt/app/mysql/bin/
mv /opt/app/mysql/bin/mysql_install_db /opt/app/mysql/scripts/
ln -s /opt/app/mysql /opt/local/mysql/app

# mariadb-10.3 needs jemalloc and libstdc++
cp -a ./usr/lib/x86_64-linux-gnu/{libjemalloc.*,libstdc++.*} /usr/lib/x86_64-linux-gnu/
# ... and bash linked with glibc to load it
mkdir -p /bin/x86_64-linux-gnu
cp -a ./bin/bash /bin/x86_64-linux-gnu/

cd /opt/app/mysql
rm -rf $(ls -d share/*|egrep -v "err|english|\.sql")
cd bin
for f in *; do ln -s mysql-client /opt/local/mysql/bin/$f || true; ln -s /opt/local/mysql/bin/$f /usr/bin/; done

cd /opt/local/mysql
for d in lib share scripts; do ln -s /opt/app/mysql/$d; done
